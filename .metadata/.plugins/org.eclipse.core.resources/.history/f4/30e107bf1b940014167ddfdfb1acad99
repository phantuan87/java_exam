package exam.dev.servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * 
 * @author phantuan
 *
 */
public class CommonServlet extends HttpServlet {

	private static final long serialVersionUID = 9108052415264620781L;

	public void forwardToPage(String page, HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
	    req.getRequestDispatcher(page).forward(req, resp);
	}
}
